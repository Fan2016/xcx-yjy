/* components/search/search.wxss */

.fr {
  float: right;
}

.search-input {
  display: flex;
  background: linear-gradient(to right, #42aaec, #42aaec);
  padding: 10rpx 0;
  z-index: 10;
  width: 100%;
  position: fixed;
  top: 0;
}
.search-input regionSelect{
  margin-left:20rpx;
}
.search-input .icon {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  left: 40rpx;
  top: 16rpx;
}
.search-input-bar {
  position: relative;
  flex: 1;
}
.search-input input {
  background: #fff;
  height: 55rpx;
  line-height: 55rpx;
  padding: 5rpx 24rpx 5rpx 80rpx;
  margin: 0 20rpx;
  border-radius: 15px;
  color: #999;
  font-size: 28rpx;
}

.search-input .cancel {
  margin: 10rpx 20rpx 0 0;
  color: #fff;
  font-size: 28rpx;
}

.search-more {
  background: #fafafa;
  position: fixed;
  z-index: 9;
  top: 80rpx;
  bottom: 0;
  width: 100%;
}

.search-more .line {
  height: 20rpx;
  background: #efefef;
  margin-top: 20rpx;
}

.search-more .tit {
  color: #333;
  font-size: 30rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  font-weight: bold;
}

.search-more .tit image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 7rpx;
}

.search-hot {
  display: flex;
  flex-wrap: wrap;
}

.search-hot .item {
  min-width: 195rpx;
  margin: 0 20rpx 20rpx;
  border: 1px solid #2477ce;
  padding: 5rpx;
  text-align: center;
  color: #2477ce;
  border-radius: 5px;
  font-size: 26rpx;
  font-weight: bold;
}

.search-history {
  border-top: 1px solid #efefef;
  padding-top: 20rpx;
  height: 700rpx;
  color: #333;
  font-size: 32rpx;
  text-align: center;
}

.search-history .item {
  margin-bottom: 20rpx;
}

.search-history .no {
  font-size: 30rpx;
}

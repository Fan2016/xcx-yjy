/* components/common/footer-bar/footer-bar.wxss */

.footer-bar {
  height: 100rpx;
  width: 100%;
  background: #fff;
  border-top: 1px solid #efefef;
  display: flex;
}

.footer-bar > view {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  padding-top: 10rpx;
  position: relative;
}

.footer-bar image {
  width: 56rpx;
  height: 60rpx;
}

.tag{
  width: 28rpx;
  height: 28rpx;
  border-radius: 20rpx;
  background: red;
  position: absolute;
  right: 35%;
  top:5rpx;
  color:#fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}
/* components/filtrate/filtrate.wxss */
.filtrate-box{
  display: flex;
  position: fixed;
  z-index: 1;
  bottom: 0;
  width: 100%;
  flex-direction: column;
}
.select-bar {
  display: flex;
  padding: 10rpx 0;
  height: 46rpx;
  background: #fff;
  width: 100%;
}

.select-bar .item {
  box-sizing: border-box;
  text-align: center;
  border-right: 1px solid #e6e6e6;
  color: #333;
  font-size: 30rpx;
  position: relative;
  padding-right: 20rpx;
  width: 20%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.select-bar .item:after {
  position: absolute;
  right: 10rpx;
  top: 18rpx;
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 10rpx;
}

.select-bar .item.on {
  color: #49a2ff;
}

.select-bar .item.on:after {
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid #49a2ff;
}

.select-bar .item.off:after {
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #bbb4b4;
}

.select-bar .item:last-child {
  border-right: none;
}
.select-mod {
  background: #fff;
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}

.line {
  height: 20rpx;
  background: #f4f4f4;
  margin: 10rpx 0 0;
}

.bar-mod {
  display: flex;
  height: 100%;
  color: #666;
  font-size: 28rpx;
}

.left-mod {
  width: 300rpx;
  height: 100%;
  background: #f5f5f5;	
}
.left-mod,.right-mod{
  overflow-y: auto;
	overflow-x: hidden;
}
.left-mod view, .right-mod view {
  display: flex;
  align-items: center;
  height: 100rpx;
  text-align: left;
  padding-left: 30rpx;
  position: relative;
}

.left-mod view.cur {
  background: #fff;
}

.left-mod view.cur:before {
  position: absolute;
  left: 0;
  top: 7rpx;
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 90rpx;
  background: #1983d1;
  margin-right: 8rpx;
}
.right-mod {
  flex: 1;
  height: 100%;
}
.right-mod .cur,.line-bar .cur{
  color:#1983d1;
}
.line-bar{
    color: #666;
  font-size: 28rpx;
}
.line-bar .li{
  display: flex;
  align-items: center;
  height: 100rpx;
  text-align: left;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #e1e1e1;
}
.custom text{
  display: inline-block;
    border: 1px solid #e1e1e1;
  width: 200rpx;
  height: 48rpx;
  text-align: center;
  margin:0 10rpx;
}
.custom button{
  background: #5a85ff;
  color: #fff;
}
.custom picker{
height: 48rpx;
}
.custom input{
  border: 1px solid #e1e1e1;
  width: 200rpx;
  height: 40rpx;
  text-align: center;
  margin:0 10rpx;
}
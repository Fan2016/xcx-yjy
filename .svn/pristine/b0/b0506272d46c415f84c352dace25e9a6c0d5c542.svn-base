/* components/common/yjy-area/yjy-area.wxss */
.bar-mod {
  display: flex;
  height: 100%;
  color: #666;
  font-size: 28rpx;
}

.left-mod {
  width: 300rpx;
  height: 100%;
  background: #f5f5f5;	
}
.left-mod,.right-mod{
  overflow-y: auto;
	overflow-x: hidden;
}
.left-mod view, .right-mod view {
  display: flex;
  align-items: center;
  height: 100rpx;
  text-align: left;
  padding-left: 30rpx;
  position: relative;
}

.left-mod view.cur {
  background: #fff;
}

.left-mod view.cur:before {
  position: absolute;
  left: 0;
  top: 7rpx;
  content: '';
  display: inline-block;
  width: 6rpx;
  height: 90rpx;
  background: #1983d1;
  margin-right: 8rpx;
}
.right-mod {
  flex: 1;
  height: 100%;
}
.right-mod .cur{
  color:#1983d1;
}
page {
  color: #333;
  display: flex;
  flex-direction: column;
  font: normal 30rpx/1.68 -apple-system-font,
          'Helvetica Neue',
          Helvetica,
          'Microsoft YaHei',
          sans-serif;
  height: 100%;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

.container-body {
  flex: 1;
  /* overflow-y: auto;
	overflow-x: hidden; */

}

.container-footer {
  width: 100%;
  display: flex;
  height: 88rpx;
  background: #fff;
}

.container search {
  padding-top: 80rpx;
}
.container filtrate {
  padding-top: 65rpx;
}

.fr {
  float: right;
}

/* 切换栏 */

.tab-toggle {
  display: flex;
}

.tab-toggle .item {
  flex: 1;
  text-align: center;
  position: relative;
  font-weight: bold;
  font-size: 30rpx;
}

.tab-toggle .cur {
  color: #49a2ff;
}

.tab-toggle .cur:after {
  position: absolute;
  content: "";
  width: 100rpx;
  height: 6rpx;
  box-sizing: border-box;
  background: #49a2ff;
  border-radius: 50rpx;
  bottom: -5rpx;
  right: 35%;
}

/* pages/user/suggest/suggest.wxss */
.container{
  background: #f1f1f1;
}

.radio-group label {
  width: 50%;
  display: inline-block;
  vertical-align: middle;
  margin: 40rpx 0;
}

.radio-group radio {
  margin-left: 80rpx;
}

.suggest-text {
  padding:0 20rpx;
}
.suggest-text button{
  margin-top: 40rpx;
  background: #42aaec;
  color: #fff;
}
.suggest-text textarea {
  border: 3rpx solid #cccccc;
  height: 330rpx;
  width: 95%;
  border-radius: 10rpx;
  background: #fff;
  padding: 10rpx;
  margin: 0 auto;
}
.suggest-email{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 10rpx;
  margin-top: 40rpx;
}
.suggest-email view{
  flex: 120rpx 0 0;
  text-align: justify;
  margin-right: 10rpx;
  font-size: 34rpx;
}
.suggest-email view::after{
  content: '';
  display: inline-block; 
  padding-left: 100%;
}
.suggest-email input{
  flex: 1;
  border: 3rpx solid #cccccc;
  border-radius: 10rpx;
  background: #fff;
  height: 60rpx;
  padding-left: 10rpx;
  font-size: 24rpx;
}
.date-show{
	position: relative;
	font-family: PingFang-SC-Regular;
	color: #fff;
	text-align: center;
  background: #4da1e5;
  display: flex;
  padding-top: 20rpx;
}
.address{
  font-size:22rpx;
  flex: 1;
  text-align: right;
  padding: 10rpx 30rpx 0 0
}
.month{
   align-items: center;
   display: flex;
   height: auto;
   padding: 0 30rpx;
}
.yy-dd{
  font-size: 22rpx;
  text-align: left;
}
.header{
	font-size: 0;
	/* padding: 0 24rpx; */
  background: #4da1e5;
  margin-bottom: 20rpx;
}
.header>view{
	display: inline-block;
	width: 14.285%;
	color: #fff;
	font-size: 26rpx;
	text-align: center;
	/* border-bottom: 1px solid #D0D0D0; */
	padding: 20rpx 0;
}
.weekMark{
	position: relative;
}
/* .weekMark view{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	border-bottom: 1px solid #22A7F6;
} */
.date-box{
	font-size: 0;
	padding: 10rpx 0;
}
.date-box>view{
	position: relative;
	display: inline-block;
	width: 14.285%;
	color: #020202;
	font-size: 40rpx;
	text-align: center;
	vertical-align: middle;
	margin: 15rpx 0;
}
.date-head{
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
  position: relative;
}
.nowDay .date-head{
	width: 60rpx;
	border-radius: 50%;
	text-align: center;
	color: #fff;
	background-color: #22A7F6;
	margin: 0 auto;
}
.tag{
  position: absolute;
  top:-20rpx;
  right:0;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
	border-radius: 50%;
	text-align: center;
	color: #fff;
	background-color: #f48942;
	margin: 0 auto;
}
.line {
  height: 20rpx;
  background: #f4f4f4;
  margin: 10rpx 0 0;
}
.list-head{
  text-align:center;
  padding-top: 20rpx;
}
.list-head text{
  display: inline-block;
  padding: 0 20rpx;
}
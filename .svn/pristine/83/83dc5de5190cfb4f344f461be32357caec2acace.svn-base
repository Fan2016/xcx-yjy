.bid-list-box{
  padding: 20rpx;
  border-bottom: 1px solid #f4f4f4;
}
.bid-tit{
  display: flex;
}
.bid-tit .state{
  display: inline-block;
  margin-right:20rpx;
}
.bid-tit .state text{
  text-align: center;
  display: inline-block;
  width: 100%;
}
.bid-tit .state{width:16px; height:43rpx;background:#fd6767; position:relative;color:#fff;
font-size: 12px;
}
.bid-tit .ico{
width:16px; height:0px; position:absolute; box-sizing:border-box;bottom:0px; background:#fd6767;
border-left: 8px solid transparent;
border-bottom: 5px solid #fff;
border-right: 8px solid transparent;
left: 0;
}

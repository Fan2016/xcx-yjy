var commonJs = require('../../../utils/common'),
  ajax = commonJs.ajax
Page({
  /**
   * 页面的初始数据
   */
  data: {
    pageindex: 1,
    pagesize: 10,
    pageindexTotal: 3,
    isLodaing: false,
    listMsg: '',
    bidList: [], 
  },
  /**
   * 生命周期函数--监听页面加载
   */
  //获取订阅列表
  getBidList() {
    ajax({
      url: 'http://192.168.118.154:9001/api/GetDataHandler.ashx',
      data: {
        or: "OPEN_TIME",
        method: "Web.XCX_GetJiaoYiList",
        pageindex: this.data.pageindex,
        pagesize: this.data.pagesize,
      }
    }).then((res) => {
      if (res.data.res == "1") {
        var total = Math.ceil(res.data.total / this.data.pagesize);
        var data = [...this.data.bidList, ...res.data.data];
        this.setData({
          bidList: data,
          pageindexTotal: total
        })
      }
    })
  },
  onLoad: function(options) {
    wx.setNavigationBarTitle({
      title: '订阅',
      success: function (res) {
        // success
      }
    })
    this.getBidList();
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {
    console.log('Down')
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    var pageindex = this.data.pageindex,
      isLodaing = this.data.isLodaing,
      pageindexTotal = this.data.pageindexTotal;

    if ((pageindex < pageindexTotal)) {
      this.data.pageindex = ++pageindex
    } else if (pageindex >= pageindexTotal) {
      this.setData({
        listMsg: '已获取全部数据',
        isLodaing: true
      })
      return
    }
    this.setData({
      listMsg: '数据加载中...',
      isLodaing: true
    })
    setTimeout(() => {
      this.getBidList()
    }, 1500)
  },
  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  }
})

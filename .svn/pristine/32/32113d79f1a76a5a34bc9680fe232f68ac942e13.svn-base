/* pages/projectDetail/projectDetail.wxss */

page {
  background: #f5f5f5;
}

.container-body {
  padding: 20rpx 20rpx 0;
  overflow-y: hidden;
}

.article-head, .article-remind, .article-main,.addresTo {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 1px 1px 2px #e5e5e5;
}

.article-head .tag {
  color: #fff;
  background: #1c87d8;
  border-radius: 5rpx;
  padding: 1rpx 5rpx;
  margin: 0 20rpx;
}

.ah-up {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.ah-up text {
  color: #959595;
}

.article-remind {
  display: flex;
  font-size: 24rpx;
  color: #959595;
}

.article-remind .state {
  padding-right: 30rpx;
}

.article-remind .time {
  flex: 1;
}

.article-remind  text {
  color: #2388d3;
  font-weight: bold;
  font-size: 24rpx;
}
.addresTo{
  padding: 100rpx 0;
}
.addresTo image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
}
.addresTo button{
    margin:40rpx auto 0;
  height: 60rpx;
  line-height:60rpx;
  width: 300rpx;
  background: #43a3f0 ;
  color: #fff;
  font-size: 28rpx;
}
.tab-toggle {
  margin-bottom: 40rpx;
}

.flow-space {
  display: flex;
}

.flow-space .time {
  padding-right: 40rpx;
  border-right: 1px solid #ffded4;
  position: relative;
  font-size: 26rpx;
  color: #666;
  text-align: right;
}

.flow-space .time text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.flow-space .time .numTag {
  /* position: absolute;
  right: 29rpx; */
  color: #fff;
  font-size: 20rpx;
  /* top: 22rpx; */
}

.flow-space .time .tag {
  position: absolute;
  right: -35rpx;
  top: -9rpx;
  width: 70rpx;
  height: 70rpx;
  background-size: contain;
  line-height: 68rpx;
  text-align: center;
}

.flow-space .time image.step {
  width: 30rpx;
  height: 30rpx;
  right: -15rpx;
}

.flow-space .matter {
  flex: 1;
  padding-left: 40rpx;
  text-align: left;
}

.flow-space .matter .tit {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.flow-space .matter .intro {
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx;
}

.flow-space .matter .skip {
  font-size: 26rpx;
  color: #1983d1;
  text-align: right;
}

.info-space {
  margin: 13rpx 0rpx 13rpx 0rpx;
}

.info-space .arrowView {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  background-color: #f5f5f5;
}

.info-space .arrowView .mold {
  font-size: 30rpx;
  font-weight: bold;
}

.info-space .arrowView .mold:before {
  content: '';
  display: inline-block;
  vertical-align: -8rpx;
  width: 6rpx;
  height: 40rpx;
  /* background: #1983d1; */
  margin-right: 8rpx;
}

.blue {
  background: #1983d1;
}

.orange {
  background: #f16840;
}

.info-space .content {
  padding: 20rpx 0 20rpx 20rpx;
  color: #333;
  font-size: 26rpx;
  overflow-x: scroll;
}
.container-footer button{
    height: 60rpx;
  width: 300rpx;
  margin-top: 14rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #fff;
  font-weight: bold;
  border: 1rpx solid #fff;
}
.collect {
  background: #f19441;
}
.share{
  background: #42a1f1
}


.arrow_right {
  display: inline-block;
  border-top: 2px solid;
  border-right: 2px solid;
  width: 12px;
  height: 12px;
  border-color: #e4e4e4;
  transform: rotate(45deg);
  position: absolute;
  right: 25rpx;
  top: 30rpx;
}

.arrow_bottom {
  display: inline-block;
  border-top: 2px solid;
  border-right: 2px solid;
  width: 12px;
  height: 12px;
  border-color: #e4e4e4;
  transform: rotate(135deg);
  position: absolute;
  right: 25rpx;
  top: 20rpx;
}

.message {
  text-align: center;
  padding: 20rpx 0;
  color: #959595;
  font-size: 30rpx;
}

.onSearch {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 50rpx auto 10rpx;
}
.copy text{
  color: #000;
  display: block;
  margin: 40rpx 0;
  padding: 0 20rpx;
  text-decoration:underline;
  line-height: 60rpx;
}
.copy view{
  color:#999999;
  font-size: 26rpx;
  text-align: center;
}
var commonJs = require('../../../utils/common'),
  ajax = commonJs.ajax
Page({
  /**
   * 页面的初始数据
   */
  data: {
    pageindexTotal: 3,
    isMessage: true, //要不要提示
    isLoad: false, //加载转圈圈要不要
    listMsg: '',
    bidList: [],
    isSel: false,
    bidType: 'tb', //切换栏目
    tbList: [],
    tbPage: 1,
    tbTotal: 0, //总共几条
    tbTotalPage: 0,
    zbList: [],
    zbPage: 1,
    zbTotal: 0, //总共几条
    zbTotalPage: 0,
    selParam: {
      or: "PUBLISHED_TIME",
      pageindex: 1,
      pagesize: 10,
      NAME: '',
      TYPE_ALL: '',
      AREA_CODE: '',
      OPEN_TIME_START: '',
      OPEN_TIME_END: '',
      CONTROL_PRICE_START: '',
      CONTROL_PRICE_END: '',
      in_status: '',
      PUBLISHED_TIME_START: '',
      PUBLISHED_TIME_END: '',
      method: 'Vip.XCX_MyTouBiao',
    },
  },
  /**
   * 生命周期函数--监听页面加载
   */
  //项目点击后调用接口说明读过
  ClickBySID(e) {
    let sid = e.detail
    ajax({
      url: '/MyBid/ClickBySID',
      data: {
        source_id: sid,
        cy_type: this.data.bidType == "tb" ? 1 : 2
      }
    }).then((res) => {
      var res = commonJs.getDefalutResponse(res.data);
      if (!res.result) {
        commonJs.showToast({
          title: res.msg
        });
      } else {
        this.data.bidList.forEach((item) => {
          if (item.SOURCE_ID == sid) {
            item.isView = false;
          }
        })
      }
    })
  },
  //切换栏目
  cutBidType(e) {
    var val = e.target.dataset.type;
    this.setData({
      bidList: [],
      bidType: val,
      isLoad: true,
      tbPage: 1,
      zbPage: 1,
    })
    this.getBidList();
  },
  //获取关注列表
  getBidList(type, isShow = true) {
    var selParam = this.data.selParam
    var that = this,
      type = type ? type : that.data.bidType,
      initData = [],
      bidType = {
        tbTotal: 'tbTotalPage',
        zbTotal: 'zbTotalPage'
      },
      newSelParam;
    if (type == 'tb') {
      newSelParam = {
        pageindex: that.data.tbPage,
        method: 'Vip.XCX_MyTouBiao',
      }
      initData = that.data.tbList;
    } else {
      newSelParam = {
        pageindex: that.data.zbPage,
        method: 'Vip.XCX_MyZaoBiao',
      }
      initData = that.data.zbList;
    }
    selParam = Object.assign(selParam, newSelParam)
    ajax({
      url: '/Search/GetData',
      data: selParam
    }).then((res) => {
      var res = commonJs.getDefalutResponse(res.data);
      if (res.result) {
        var total = Math.ceil(res.data.total / selParam.pagesize);
        res.data.data.forEach((item, index) => {
          item["isView"] = item.MyBid_UPDATE_NUM > 0 ? true : false
          item["componentName"] = "canyu"
        })
        var bidList = [],
          listMsg = "",
          isLoad = false;
        bidList = [...this.data.bidList, ...res.data.data];
        if (isShow) {
          if (bidList.length == 0) {
            listMsg = '暂无数据';
            isLoad = false; //加载转圈圈要不要
          } else if (this.data.selParam.pageindex >= total) {
            listMsg = '已获取全部数据';
            isLoad = false; //加载转圈圈要不要
          } else {
            isLoad = true; //加载转圈圈要不要
            listMsg = '数据加载中...';
          }
          this.setData({
            listMsg: listMsg,
            isLoad: isLoad,
            bidList: [...bidList],
            [bidType[type + 'Total']]: total,
            [type + 'Total']: res.data.total,
          })
        } else {
          this.setData({
            [type + 'Total']: res.data.total,
          })
        }
      }
    })
  },
  fetchfiltrate(val) {
    var param = val.detail,
      handleType = param.type,
      isSel = param.isSel,
      selType = param.selType,
      selVal = param.selVal;
    if (handleType == 'toggle') {
      this.setData({
        isSel: isSel
      })
    } else if (handleType == 'search') {
      let selParam = this.data.selParam,
        newSelParam = {};
      selParam.pageindex = 1;
      switch (selType) {
        case 'area':
          newSelParam = {
            AREA_CODE: selVal
          }
          break;
        case 'trade':
          newSelParam = {
            TYPE_ALL: selVal
          }
          break
        case 'time':
          newSelParam = {
            OPEN_TIME_START: selVal.startDate,
            OPEN_TIME__END: selVal.endDate
          }
          break
        case 'state':
          newSelParam = {
            in_status: selVal
          }
          break
        case 'money':
          newSelParam = {
            CONTROL_PRICE_START: selVal.startMoney,
            CONTROL_PRICE_END: selVal.endMoney
          }
          break
      }
      this.setData({
        isSel: isSel,
        bidList: [],
        listMsg: '数据加载中...',
        isLoad: true, //加载转圈圈要不要
        selParam: Object.assign(selParam, newSelParam)
      })
      this.getBidList()
    }
  },
  onLoad: function(options) {
    wx.setNavigationBarTitle({
      title: '我的参与',
      success: function(res) {
        // success
      }
    })
    this.getBidList("zb", false);
    this.getBidList("tb", true);
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {
    console.log('Down')
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {
    var bidType = this.data.bidType,
      tbTotalPage = this.data.tbTotalPage,
      zbTotalPage = this.data.zbTotalPage,
      tbPage = this.data.tbPage,
      zbPage = this.data.zbPage;
    if (bidType == 'tb' && (tbPage < tbTotalPage)) {
      this.data.tbPage = ++tbPage
      console.log(this.data.kbPage)
    } else if (bidType == 'zb' && (zbPage < zbTotalPage)) {
      this.data.zbPage = ++zbPage
    } else {
      return
    }
    setTimeout(() => {
      this.getBidList()
    }, 1500)
  },
  /**
   * 用户点击右上角分享
   */
  // onShareAppMessage: function() {

  // }
})
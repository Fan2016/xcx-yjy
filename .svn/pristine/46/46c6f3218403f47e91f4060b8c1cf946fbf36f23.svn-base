//index.js
//获取应用实例
var app = getApp(), commonJs = require('../../../utils/common.js'), treeUtil = commonJs.treeUtil,
  ajax = commonJs.ajax
Page({
  data: {
    year: 0,
    month: 0,
    day: 0,
    date: ['日', '一', '二', '三', '四', '五', '六'],
    dateArr: [],
    isToday: 0,
    isTodayWeek: false,
    todayIndex: 0,
    pageindex: 1,
    pagesize:10,
    pageindexTotal:3,
    isLodaing: false,
    listMsg: '',
    bidList: [],
    regionArray:[],//地区数组
    regionValue: [],//当前选中的地区
    proObjec:{},//最终的省的对象
    cityObject:{},//最终市的对象
  },
  getRegion(){
    var opiton = {}, area = [];
    setTimeout(() => {
      opiton = app.option;
      area = (new treeUtil([...app.option.area], 'ID', 'PID')).toTree();
      var allPro = [{ NAME: "全国", ID: "0000", children: [{ NAME: "全部", ID: "1111" }] }];
      var pro = [...allPro, ...area];
      var city = [...pro[0].children];
      this.setData({
        regionArray: [pro, city],
        regionValue: [0, 0],
        proObjec: pro[0],//默认第一个省份
        cityObject: city[0],//默认第一个省份的第一个市
      })
    }, 500)
  },
  onLoad: function () {
    this.getRegion();
    let now = new Date();
    let year = now.getFullYear();
    let month = now.getMonth() + 1;
    let day = now.getDate()
    this.dateInit();
    this.setData({
      year,
      day,
      month,
      isToday: '' + year + '-' + month + '-' + now.getDate()
    })
    this.showTodayTender(null)
  },
  dateInit: function(setYear, setMonth) {
    //全部时间的月份都是按0~11基准，显示月份才+1
    let dateArr = []; //需要遍历的日历数组数据
    let arrLen = 0; //dateArr的数组长度
    let now = setYear ? new Date(setYear, setMonth) : new Date();
    let year = setYear || now.getFullYear();
    let nextYear = 0;
    let month = setMonth || now.getMonth(); //没有+1方便后面计算当月总天数
    let nextMonth = (month + 1) > 11 ? 1 : (month + 1);
    let startWeek = new Date(year + ',' + (month + 1) + ',' + 1).getDay(); //目标月1号对应的星期
    let dayNums = new Date(year, nextMonth, 0).getDate(); //获取目标月有多少天
    let obj = {};
    let num = 0;
    if (month + 1 > 11) {
      nextYear = year + 1;
      dayNums = new Date(nextYear, nextMonth, 0).getDate();
    }
    arrLen = startWeek + dayNums;
    var starttime = year + "-" + (month + 1) + "-01";
    var endtime = year + "-" + (month + 1) + "-" + dayNums;
    ajax({
      url: 'http://192.168.118.154:9001/api/GetDataHandler.ashx',
      data: {
        method: "Web.XCX_GetOpenCal",
        starttime: starttime,
        endtime: endtime,
      }
    }).then((res) => {
      if (res.data.res == "1") {
        var countList = res.data.data||[];
        var count=0;
        for (let i = 0; i < arrLen; i++) {
          if (i >= startWeek) {
            count = 0;
            num = i - startWeek + 1;
            for(let j=0;j<countList.length;j++)
            {
              var day=countList[j].DAY.split("-")[2];
              if (parseInt(day)=== num)
              {
                count = countList[j].COUNT || "";
              }
            }
            obj = {
              isToday: '' + year + '-' + (month + 1) + '-' +  num,
              dateNum: num,
              count: count,
            }
          } else {
            obj = {};
          }
          dateArr[i] = obj;
        }
        this.setData({
          dateArr: dateArr
        })
        let nowDate = new Date();
        let nowYear = nowDate.getFullYear();
        let nowMonth = nowDate.getMonth() + 1;
        let nowWeek = nowDate.getDay();
        let getYear = setYear || nowYear;
        let getMonth = setMonth >= 0 ? (setMonth + 1) : nowMonth;
        if (nowYear == getYear && nowMonth == getMonth) {
          this.setData({
            isTodayWeek: true,
            todayIndex: nowWeek
          })
        } else {
          this.setData({
            isTodayWeek: false,
            todayIndex: -1
          })
        }
      }
    })
  },
  //点击日历中的日期显示当天的开标列表
  showTodayTender(e) {
    var time = "", AREA_CODE="";
    if(!e)//为null的时候是今天的开标列表，一开始进入调用
    {
      time = this.data.isToday;
    }
    else//点击日历上的日期后调用
    {
      time = e.currentTarget.dataset.date;
      this.setData({
        pageindex: 1,
         bidList: [],
        listMsg:"",
        isLodaing:false
      })
    }
    AREA_CODE = this.data.cityObject.ID === "1111" ? this.data.proObjec.ID == "0000" ? "" : this.data.proObjec.ID.substring(0,2)  : this.data.cityObject.ID;
    ajax({
      url: 'http://192.168.118.154:9001/api/GetDataHandler.ashx',
      data: {
        or:"OPEN_TIME",
        method: "Web.XCX_GetJiaoYiList",
        OPEN_TIME_START: time,
        OPEN_TIME_END: time, 
        AREA_CODE: AREA_CODE||"",
        pageindex: this.data.pageindex,
        pagesize: this.data.pagesize,
      }
    }).then((res) => {
      if (res.data.res == "1") {
        var total = Math.ceil(res.data.total / this.data.pagesize);
        var data = [...this.data.bidList, ...res.data.data];
        // this.data.bidList.push(...res.data.data)
        this.setData({
          bidList: data,
          isToday: time,
          pageindexTotal: total
        })
      }
    })
  },
  lastMonth: function() {
    //全部时间的月份都是按0~11基准，显示月份才+1 上一月
    let year = this.data.month - 2 < 0 ? this.data.year - 1 : this.data.year;
    let month = this.data.month - 2 < 0 ? 11 : this.data.month - 2;
    this.setData({
      year: year,
      month: (month + 1)
    })
    this.dateInit(year, month);
  },
  nextMonth: function() {
    //全部时间的月份都是按0~11基准，显示月份才+1  下一月
    let year = this.data.month > 11 ? this.data.year + 1 : this.data.year;
    let month = this.data.month > 11 ? 0 : this.data.month;
    this.setData({
      year: year,
      month: (month + 1)
    })
    this.dateInit(year, month);
  },
  /**
  * 页面上拉触底事件的处理函数
  */
  onReachBottom: function () {
    var  pageindex = this.data.pageindex,
      isLodaing = this.data.isLodaing,
    pageindexTotal = this.data.pageindexTotal;

    if ( (pageindex < pageindexTotal)) {
      this.data.pageindex = ++pageindex
    } else if (pageindex >= pageindexTotal) {
      this.setData({
        listMsg: '已获取全部数据',
        isLodaing: true
      })
      return
    }
    this.setData({
      listMsg: '数据加载中...',
      isLodaing: true
    })
    setTimeout(() => {
      this.showTodayTender()
    }, 1500)
  },
  bindRegionChange: function (e) {
    console.log('地区选择改变，携带值为', e.detail.value)
    this.setData({
      proObjec: this.data.regionArray[0][e.detail.value[0]],
      cityObject: this.data.regionArray[1][e.detail.value[1]],
      bidList:[]
    })
    this.showTodayTender(null)
  },
  bindRegionColumnChange: function (e) {
    var allCity = [{ NAME: "全部", ID: "1111" }];
    var data = {
      regionArray: this.data.regionArray,
      regionValue: this.data.regionValue
    };
    switch (e.detail.column) {
      case 0:
      
        data.regionArray[1] = [...allCity, ...data.regionArray[e.detail.column][e.detail.value].children] ;//当选择省份发生改变，市的数据也要改变
        data.regionValue[0] = e.detail.value;//选中的省份
        data.regionValue[1] = 0;//当选择省份发生改变，市的数据也要改变并且默认第一个
        break;
      case 1:
        data.regionValue[1] = e.detail.value;//当选择市区发生改变
        break;
    }
    this.setData(data)
  },
})
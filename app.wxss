page {
  color: #333;
  display: flex;
  flex-direction: column;
  font: normal 30rpx/1.68 -apple-system-font,
          'Helvetica Neue',
          Helvetica,
          'Microsoft YaHei',
          sans-serif;
  height: 100%;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

.container-body {
  flex: 1;
}

.container-footer {
  width: 100%;
  display: flex;
  height: 88rpx;
  background: #fff;
}

.container search {
  padding-top: 80rpx;
}
.container filtrate {
  padding-top: 65rpx;
}

.fr {
  float: right;
}
.shadeBox{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0);
  z-index: 100
  
}
/* 切换栏 */

.tab-toggle {
  display: flex;
  background: #e4e4e4;
}

.tab-toggle .item {
  flex: 1;
  text-align: center;
  position: relative;
  font-weight: bold;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  color:#999;
}

.tab-toggle .cur,.tab-toggle .curLine  {
  color: #49a2ff;
  background: #fff;
}
.tab-toggle .cur .count,.tab-toggle .curLine .count{
  color: #333
}
.tab-toggle .cur:after {
  position: absolute;
  content: "";
  width: 100rpx;
  height: 6rpx;
  box-sizing: border-box;
  background: #49a2ff;
  border-radius: 50rpx;
  bottom: 10rpx;
  right: 35%;
}
.tab-toggle .curLine:after {
  position: absolute;
  content: "";
  width: 100%;
  height: 6rpx;
  box-sizing: border-box;
  background: #49a2ff;
  border-radius: 50rpx;
  top: 0;
  right: 0;
}
footerBar{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
}
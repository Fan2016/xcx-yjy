/* pages/user/index/index.wxss */

.container-body {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
}
.tool{
  position: absolute;
  z-index: 1;
  right: 20rpx;
  top:20rpx;
}
.tool navigator{
  display: inline-block;
  margin-left: 30rpx;
  position: relative;
}
.tool navigator .bubble{
  width: 28rpx;
  height: 28rpx;
  border-radius: 20rpx;
  background: red;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  line-height: 28rpx;
}
.tool image{
  width: 50rpx;
  height: 50rpx;
}
.userName {
  position: relative;
}

.index-menu {
  background-color: #fff;
  flex: 1 1 auto;
  position: relative;
}

.index-menu-space {
  display: flex;
  width: 100%;
  padding: 0 20rpx;
  flex: 1;
  position: absolute;
  height: 100%;
  top: -50rpx;
  flex-direction: column;
  box-sizing: border-box;
}

.menu-module {
  width: 100%;
  flex: 1;
  border: 1px solid #eee;
  border-radius: 18rpx;
  background: #fff;
  box-shadow: #DFEEF6 0 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  color: #68737e;
  margin-bottom: 40rpx
}

.menu-title {
  font-weight: bold;
  padding-left: 20rpx;
  border-bottom: 1px solid #efefef;
  flex: 0 0 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}

.menu-list {
  display: flex;
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
}

.menu-list .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.menu-list .bubble{
  width: 36rpx;
  height: 36rpx;
  border-radius: 30rpx;
  background: red;
  position: absolute;
  right: 14rpx;
  top: -2rpx;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
  line-height: 36rpx;
}
.menu-list .item .item-box{
  position: relative;
}
.menu-list .item text {
  display: block;
}

.menu-list image {
  width: 60rpx;
  height: 60rpx;
}

.index-user {
  color: #fff;
  font-size: 30rpx;
  display: flex;
  flex: 0 0 330rpx;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 20rpx 0 0 0;
}

.index-user .meTopBg {
  width: 100%;
  height: 370rpx;
  position: absolute;
  top: 0;
}
.user-info{
  text-align: center;
  flex: 0 0 160rpx;
  margin-top: 10rpx;
}
.user-total{
  width:100%;
flex:0 0 80rpx;
display:flex;
text-align:center;
position:relative;
font-size:26rpx;
}
.user-total .item{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.user-total .item view{
  flex: 1
}
.user-total .num{
  font-weight: bold;
}
.user-total .type{
font-size: 24rpx
}
button[class="icon"] {
  border: 0;
  width: 240rpx;
  height: 110rpx;
}

.index-logOut {
  background-color: #ff2122;
  color: #fff;
  margin: 0rpx 20rpx 0rpx 20rpx;
}

.icon {
  position: relative;
}

.icon image {
  border-radius: 50%;
  border: 1px solid #eee;
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
}

.redMessage {
  display: flex;
  border-radius: 50%;
  background-color: #ff2122;
  color: #fff;
  width: 0.4rem;
  height: 0.4rem;
  position: absolute;
  top: 10px;
  right: 25%;
}
.banner{
  flex: 0 0 170rpx;
}
.banner image{
  width: 100%;
}

